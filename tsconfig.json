{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "include": ["src/**/*", "node_modules/@types", "test/**/**/*"],
  "exclude": ["node_modules"]
}
